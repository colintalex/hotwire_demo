<%= turbo_frame_tag 'turbo_modal' do %>
  <div class="modal fade" tabindex="-1" aria-labelledby="defaultModalLabel" aria-hidden="true" data-controller="modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="defaultModalLabel">
            <%= local_assigns[:title] || 'Modal Title' %>
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-3" id="turbo_modal_body">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>
